<h1>Create a new article</h1>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>
  
  <p>
    <strong> 
      <%= f.label :title, "Title"  %>
    </strong>   

    <br>

    <%= f.text_field :title %>

  </p>
  
  <p>
    <strong> 
      <%= f.label :description, "Description" %>
    </strong>    
    
    <br> 
    
    <%= f.text_area :description %>
  
  </p>  

  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>
